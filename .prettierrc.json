{
  "semi": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true,
  "useTabs": false,
  "printWidth": 120,
  "endOfLine": "auto",
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "jsxSingleQuote": true,
  "importOrder": ["^@shared/(.*)$", "^@/features/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "overrides": [
    {
      "files": [",*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
